{
    "env": {
        "browser": true,
        "es2022": true,
        "node": true
    },
    "extends": ["eslint:recommended", "prettier", "plugin:react/recommended", "plugin:react/jsx-runtime", "plugin:react-hooks/recommended"],
    "plugins": ["prettier", "react-refresh"],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "no-debugger": "off",
        "linebreak-style": ["error", "unix"],
        "quotes": ["error", "double"],
        "curly": ["error", "all"],
        "semi": ["error", "always"],
        "react-refresh/only-export-components": "warn"
    },
    "settings": {"react": {"version": "18.2"}},
    "ignorePatterns": ["**/node_modules/**"]
}
